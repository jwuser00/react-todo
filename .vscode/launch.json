{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome with React App",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "preLaunchTask": "start react app",
            "userDataDir": "${workspaceFolder}/.vscode/chrome"
        }
    ]
}